<resources xmlns:tools="http://schemas.android.com/tools">

    <style tools:ignore="NewApi" name="CustomTheme" parent="android:Theme.DeviceDefault">
        <item name="cropImageStyle">@style/Widget.CropImageView</item>
    </style>

    <style name="Widget.CropImageView" parent="android:Widget">
        <item name="crop_show_thirds">true</item>
        <item name="crop_show_handles">always</item>
        <item name="crop_highlight_color">@color/highlight</item>
        <item name="crop_outside_color">@color/outside</item>
    </style>

</resources>